name: sharik-app
base: core18
version: '{{.version}}'
summary: Sharing files across devices with ease
description: |
  Sharik is an app for sending files to almost any device. No internet connection needed.
confinement: classic
grade: stable
license: MIT
apps:
  sharik:
    command: sharik
    desktop: local/sharik.desktop
parts:
  desktop:
    plugin: dump
    source: snap
  assets:
    plugin: dump
    source: build/assets
  app:
    plugin: dump
    source: build
    stage-packages:
      - libx11-6
      - libxrandr2
      - libxcursor1
      - libxinerama1
